            <TextBlock
                FontWeight="Bold"
                Foreground="White"
                Background="#c05046"
                VerticalAlignment="Top"
                Padding="1"
                 Grid.Column="0">
                ACHATS</TextBlock>
            <Label Grid.Row="1">Comp./IPs</Label>
            <Label Grid.Row="2">SsT</Label>
            <Label Grid.Row="3">EDA</Label>
            <Label Grid.Row="4">INDUS</Label>
            <Label Grid.Row="5" FontWeight="Bold">TOTAL</Label>

