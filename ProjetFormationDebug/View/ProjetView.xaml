                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Background="Transparent"
                            Foreground="White"
                        >
                        +
                    </Button>
                    <TextBlock
                        Grid.ColumnSpan="9"
                        Grid.Row="0"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Foreground="White"
                        Padding="1">
                        Lots
                    </TextBlock>
                    <TextBlock
                        Grid.ColumnSpan="9"
                        Grid.Row="0"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Foreground="White"
                        Padding="1"
                        Text="{Binding nbWeek,Mode=OneWay}"/>

                </StackPanel>

                <ItemsControl>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander>
                                <DataGrid></DataGrid>
                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
